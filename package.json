{
  "name": "wikiwars",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@types/node": "13.9.5",
    "@types/react": "16.9.25",
    "conventional-changelog-gitmoji": "0.2.5",
    "husky": "4.2.3",
    "jest": "25.1.0",
    "lerna": "3.20.2",
    "lint-staged": "10.0.8",
    "prettier": "1.19.1",
    "ts-jest": "25.2.1",
    "ts-node-dev": "1.0.0-pre.44",
    "typescript": "3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream precommit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,json,md}": [
      "prettier --write"
    ]
  }
}
