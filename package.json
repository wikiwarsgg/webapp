{
  "name": "wikiwars",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@commitlint/cli": "9.1.2",
    "@types/node": "13.13.45",
    "@types/react": "16.14.8",
    "conventional-changelog-gitmoji": "0.2.5",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lerna": "3.22.1",
    "lint-staged": "10.5.4",
    "prettier": "2.0.5",
    "ts-jest": "26.4.4",
    "ts-node-dev": "1.0.0",
    "typescript": "3.9.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream precommit",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,css,json,md}": [
      "prettier --write"
    ]
  }
}
